-- To see table with values
SELECT * FROM salesman
	

-- AGGREATE FUNCTIONS
-- #MIN, find minimum commissiom that salesman recive.
select min(commission) from salesman
	
-- #MAX, find maximum commissiom that salesman recive.
select max(commission) from salesman
	
-- #AVG, find Average commissiom that salesman recive.
select Avg(commission) from salesman
	
-- #COUNT , no. of salesman 
select count(*) from salesman
	
-- #SUM ,find   total commissiom 
select sum(commission) from salesman


